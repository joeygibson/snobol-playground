#!/usr/bin/env python3

import re

def format_snobol4(code):
    formatted_lines = []
    indent_level = 0
    
    for line in code.splitlines():
        line = line.rstrip()
        
        # Skip empty lines
        if not line.strip():
            formatted_lines.append("")
            continue
        
        # Handle labels (assumed at the start of a line)
        match = re.match(r'^(\S+)(\s+)(=|\$|\*|\?)', line)
        if match:
            label, spacing, rest = match.groups()
            formatted_line = f"{label:<10} {rest}"
        else:
            formatted_line = "    " + line.strip()
        
        # Improve spacing around operators
        formatted_line = re.sub(r'\s*([=+-/*<>])\s*', r' \1 ', formatted_line)
        formatted_lines.append(formatted_line)
    
    return "\n".join(formatted_lines)

# Example usage
snobol_code = """
START   OUTPUT = "Hello, World!"
        END
"""

formatted_code = format_snobol4(snobol_code)
print(formatted_code)

